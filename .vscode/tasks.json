{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/Makefile"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/Makefile"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "make flash",
      "options": {
        "cwd": "${workspaceFolder}/Makefile"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Flash Secure First",
      "type": "shell",
      "command": "pyocd",
      "args": [
        "flash",
        "${workspaceFolder}/Makefile/Secure/build/SecBoot_S.elf"
      ],
      "group": "none",
      "problemMatcher": []
    },
        {
      "label": "Reset",
      "type": "process", // keeps the terminal from popping up
      "command": "pyocd",
      "args": [
        "reset"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "dummy",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }

  ]
}